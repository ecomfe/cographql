/**
 * 主样式，这里设置页面通用样式
 */

initialize()

@require './css/font/iconfont.css'
@require './css/config'

html,
body
    min-height: 100%

body
    -webkit-touch-callout: none
    -webkit-user-select: none
    background: $test-color

.aaa
    color: red
    background: url('./css/img/react-logo.png')
    background-size: contain
    background-repeat: no-repeat
    size(50px, 50px)

.ccc
    display: block
    background: url('./css/img/react-logo.png')
    background-size: contain
    background-repeat: no-repeat
    size(50px, 50px)

a,
a:link,
a:hover
    color: inherit
    text-decoration: none

.bottom-hint
    position: fixed
    bottom: 0
    border: 1px solid #ddd
    background-color: #fff
    width: 100%
    height: 60px
    line-height: 60px
    text-align: center

#message-container-root
    width: 100%
    overflow: hidden
